<h1>Post Feed</h1>

<a class="new-post-link" href="/posts/new">create new post</a>
<ul class="posts">
  {{#each posts as |post|}}
  <div class="post-block">

    <div class="user-info">
      <h1>{{author.username}}</h1>
      <img src="https://cdn-icons-png.flaticon.com/512/147/147144.png" width="100" height="100">
    </div>

    <div class="post-content">
      <h2>{{post.message}}</h2>

      {{#if post.photo}}
      <img src="{{post.photo}}" width="200" height="150">
      {{else}}
      <p></p>
      {{/if}}

      <p>{{post.likes.count}} likes</p>
      <p>{{post.comments.length}} comments</p>
      <p>{{post.dateString}}</p>
      <a href="/singlepost?id={{this._id}}">view post</a>
    </div>

  </div>
  <p></p>
  {{/each}}
</ul>


